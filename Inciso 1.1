clear all, close all, clc
%-----------------------------Inciso 1.1-----------------------------------
A = 100;
B = 100;
u1 = zeros(A,B);
u2 = zeros(A,B);
u3 = zeros(A,B);
u4 = zeros(A,B);
[X,Y] = meshgrid(1:1:A,1:1:B);

BC = ones(size(B,1));

%Con N = 2
for k=1:2
    Ak1 = (2/(sin(k*pi*A/B)))*sum(BC.*sinh(k*pi*(1:B)/B));
    u1 = u1 + Ak1*sin(k*pi*Y/B).*sinh(k*pi*X/B);
end
colormap cool;
figure(1)
subplot(2,1,1)
surf(X,Y,u1);
subplot(2,1,2)
imagesc(u1)
colorbar;

